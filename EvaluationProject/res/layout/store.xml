<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/store_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/setup_gray" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/setup_gray"
            android:orientation="vertical" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/store_top_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@color/setup_gray"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/company_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="24dip"
                            android:layout_marginTop="12dip"
                            android:text="@string/_store"
                            android:textColor="@color/settings_title_text"
                            android:textSize="18dip"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal" >

                            <fragment
                                android:id="@+id/map"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                class="com.google.android.gms.maps.MapFragment" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="vertical" >

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:id="@+id/address_txt"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Address"
                                        android:textColor="@color/black_color" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:id="@+id/city_txt"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:text="City"
                                        android:textColor="@color/black_color" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:id="@+id/locality_txt"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:text="locality"
                                        android:textColor="@color/black_color" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:id="@+id/landmark_txt"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:text="locality"
                                        android:textColor="@color/black_color" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/description_txt"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:paddingRight="10dp"
                                android:text="City"
                                android:textColor="@color/black_color" />
                        </LinearLayout>
                   
                    </LinearLayout>

                    <!-- Store -->

                    <RelativeLayout
                        android:id="@+id/store_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dip"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal" >

                                    <View
                                        android:layout_width="6dip"
                                        android:layout_height="match_parent"
                                        android:background="@color/card_action_side_bar" />

                                    <TextView
                                        android:id="@+id/company_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/prepaid_tab_stretch"
                                        android:gravity="center_vertical"
                                        android:paddingLeft="16dip"
                                        android:textColor="#000000"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#ffffff"
                                    android:orientation="vertical" >

                                    <View
                                        android:id="@+id/store__left_stripe"
                                        android:layout_width="6dip"
                                        android:layout_height="match_parent"
                                        android:layout_alignBottom="@+id/store__stripe"
                                        android:layout_alignParentLeft="true"
                                        android:background="@color/card_action_side_bar" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_toRightOf="@+id/store__left_stripe"
                                        android:orientation="vertical"
                                        android:paddingBottom="16dip" >

                                        <HorizontalScrollView
                                            android:id="@+id/store_horizontal_scroll_view"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:scrollbars="none" >

                                            <LinearLayout
                                                android:id="@+id/store_item_layout"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal" >
                                            </LinearLayout>
                                        </HorizontalScrollView>
                                    </LinearLayout>
                                </RelativeLayout>
                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>

                    <Button
                        android:id="@+id/details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dip"
                        android:layout_marginRight="80dip"
                        android:layout_marginTop="10dip"
                        android:text="Details"
                        android:textColor="@color/black_color"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/parent_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dip"
            android:orientation="horizontal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/image_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:background="#CC000000"
        android:visibility="gone" >

        <com.interview.evaluationproject.view.CustomImageView
            android:id="@+id/click_card_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:src="@drawable/card_background_centered" />

        <Button
            android:id="@+id/close_click_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="32dip"
            android:layout_marginLeft="80dip"
            android:layout_marginRight="80dip"
            android:layout_marginTop="16dip"
            android:text="Close"
            android:textColor="@color/black_color" />
    </RelativeLayout>

</RelativeLayout>